<?xml version='1.0' encoding='utf-8'?>

<widget
    id="com.neontribe.gbptm"
    version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:gap="http://phonegap.com/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
>

    <name>GBPTM</name>

    <description>An interactive map of Great Britain's Public Toilets</description>

    <engine name="android" spec="~5.1.1" />

    <content src="index.html" />

    <preference name="EnableViewportScale" value="true" />
    <preference name="ShowTitle" value="false" />

    <!-- cordova-plugin-splashscreen -->
    <preference name="SplashScreen" value="screen" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="SplashScreenDelay" value="3000" />

    <!-- cordova-plugin-statusbar -->
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#1a1a1a" />

    <!-- android: manifest -->
    <config-file platform="android" parent="/manifest" mode="merge">
        <application android:theme="@android:style/Theme.NoTitleBar"></application>
    </config-file>

    <!-- Plugins -->
    <plugin name="cordova-plugin-geolocation" spec="~2.4.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />

    <!-- Icon -->
    <icon src="icon.png" />
    <icon platform="android" density="ldpi" src="res/icons/android/icon-36-ldpi.png" />
    <icon platform="android" density="mdpi" src="res/icons/android/icon-48-mdpi.png" />
    <icon platform="android" density="hdpi" src="res/icons/android/icon-72-hdpi.png" />
    <icon platform="android" density="xhdpi" src="res/icons/android/icon-96-xhdpi.png" />
    <icon platform="android" density="xxhdpi" src="res/icons/android/icon-144-xxhdpi.png" />
    <icon platform="android" density="xxxhdpi" src="res/icons/android/icon-192-xxxhdpi.png" />
    <icon platform="ios" height="29" src="res/icons/ios/icon-small.png" width="29" />
    <icon platform="ios" height="58" src="res/icons/ios/icon-small-2x.png" width="58" />
    <icon platform="ios" height="87" src="res/icons/ios/icon-small-3x.png" width="87" />
    <icon platform="ios" height="40" src="res/icons/ios/icon-40.png" width="40" />
    <icon platform="ios" height="80" src="res/icons/ios/icon-40-2x.png" width="80" />
    <icon platform="ios" height="120" src="res/icons/ios/icon-40-3x.png" width="120" />
    <icon platform="ios" height="50" src="res/icons/ios/icon-50.png" width="50" />
    <icon platform="ios" height="100" src="res/icons/ios/icon-50-2x.png" width="100" />
    <icon platform="ios" height="57" src="res/icons/ios/icon-57.png" width="57" />
    <icon platform="ios" height="114" src="res/icons/ios/icon-57-2x.png" width="114" />
    <icon platform="ios" height="60" src="res/icons/ios/icon-60.png" width="60" />
    <icon platform="ios" height="120" src="res/icons/ios/icon-60-2x.png" width="120" />
    <icon platform="ios" height="180" src="res/icons/ios/icon-60-3x.png" width="180" />
    <icon platform="ios" height="72" src="res/icons/ios/icon-72.png" width="72" />
    <icon platform="ios" height="144" src="res/icons/ios/icon-72-2x.png" width="144" />
    <icon platform="ios" height="76" src="res/icons/ios/icon-76.png" width="76" />
    <icon platform="ios" height="152" src="res/icons/ios/icon-76-2x.png" width="152" />
    <icon platform="ios" height="167" src="res/icons/ios/icon-83.5-2x.png" width="167" />

    <!-- Splash screen -->
    <splash src="splash.png" />
    <splash platform="android" density="port-ldpi" src="res/screens/android/screen-ldpi-portrait.png" />
    <splash platform="android" density="port-mdpi" src="res/screens/android/screen-mdpi-portrait.png" />
    <splash platform="android" density="port-hdpi" src="res/screens/android/screen-hdpi-portrait.png" />
    <splash platform="android" density="port-xhdpi" src="res/screens/android/screen-xhdpi-portrait.png" />
    <splash platform="android" density="port-xxhdpi" src="res/screens/android/screen-xxhdpi-portrait.png" />
    <splash platform="android" density="port-xxxhdpi" src="res/screens/android/screen-xxxhdpi-portrait.png" />
    <splash platform="android" density="land-ldpi" src="res/screens/android/screen-ldpi-landscape.png" />
    <splash platform="android" density="land-mdpi" src="res/screens/android/screen-mdpi-landscape.png" />
    <splash platform="android" density="land-hdpi" src="res/screens/android/screen-hdpi-landscape.png" />
    <splash platform="android" density="land-xhdpi" src="res/screens/android/screen-xhdpi-landscape.png" />
    <splash platform="android" density="land-xxhdpi" src="res/screens/android/screen-xxhdpi-landscape.png" />
    <splash platform="android" density="land-xxxhdpi" src="res/screens/android/screen-xxxhdpi-landscape.png" />
    <splash platform="ios" width="640" height="1136" src="res/screens/ios/screen-iphone-568h-2x.png" />
    <splash platform="ios" width="320" height="480" src="res/screens/ios/screen-iphone-portrait.png" />
    <splash platform="ios" width="640" height="960" src="res/screens/ios/screen-iphone-portrait-2x.png" />
    <splash platform="ios" width="750" height="1334" src="res/screens/ios/screen-iphone-portrait-667h.png" />
    <splash platform="ios" width="1242" height="2208" src="res/screens/ios/screen-iphone-portrait-736h.png" />
    <splash platform="ios" width="2208" height="1242" src="res/screens/ios/screen-iphone-landscape-736h.png" />
    <splash platform="ios" width="768" height="1024" src="res/screens/ios/screen-ipad-portrait.png" />
    <splash platform="ios" width="1536" height="2048" src="res/screens/ios/screen-ipad-portrait-2x.png" />
    <splash platform="ios" width="1024" height="768" src="res/screens/ios/screen-ipad-landscape.png" />
    <splash platform="ios" width="2048" height="1536" src="res/screens/ios/screen-ipad-landscape-2x.png" />
    <splash platform="ios" width="2732" height="2048" src="res/screens/ios/screen-ipad-landscape-ipadpro.png" />
    <splash platform="ios" width="2048" height="2732" src="res/screens/ios/screen-ipad-portrait-ipadpro.png" />

    <!-- cordova-plugin-whitelist -->
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />

</widget>
