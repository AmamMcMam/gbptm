{
  "scope": "neontribe",
  "version": 2,
  "builds": [
    {
      "src": "packages/ui/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build",
        "useBuildUtils": "@now/build-utils"
      }
    },
    {
      "src": "packages/api/src/graphql/index.js",
      "use": "@now/node"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri"
  },
  "routes": [
    {
      "src": "/graphql",
      "dest": "packages/api/src/graphql/index.js"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "packages/ui/build/index.html"
    }
  ]
}
