{
  "name": "toiletmap",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "CI=true lerna run test --parallel --ignore=@toiletmap/leaflet-control-geocoder",
    "reinstall": "lerna clean --yes && rm yarn.lock && yarn install",
    "release": "lerna version --conventional-commits --push --exact -m \"build: release %s\"",
    "lint": "eslint . && stylelint \"packages/{ui,ui-next,admin}/**/*.css\"",
    "prettify": "prettier --single-quote --trailing-comma es5 --write \"./**/*.{js,json}\"",
    "postinstall": "lerna run build --scope=@toiletmap/leaflet-control-geocoder",
    "load:devData": "mongorestore --noIndexRestore --drop --nsFrom 'app29532998.*' --nsTo 'gbptm.*' --gzip --archive=./data/devData.tar.gz",
    "build:ui": "lerna run build --scope=@toiletmap/ui",
    "build:explorer": "lerna run build --scope=@toiletmap/explorer",
    "docker:build": "docker build --network=host -t toiletmap/toiletmap .",
    "docker:run": "docker run --network=host --env-file .env -d toiletmap/toiletmap",
    "build": "yarn build:ui && yarn build:explorer && yarn docker:build",
    "pullconfig": "heroku config:get -s MONGODB_URI --app gbptm-stage >> .env",
    "deploy:push": "heroku container:push web",
    "deploy:release": "heroku container:release web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neontribe/gbptm.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neontribe/gbptm/issues"
  },
  "homepage": "https://github.com/neontribe/gbptm#readme",
  "lint-staged": {
    "linters": {
      "*.json": [
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ],
      "*.js": [
        "eslint",
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ],
      "*.css": "stylelint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "7.3.2",
    "@commitlint/config-conventional": "7.3.1",
    "eslint": "5.12.1",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "3.2.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.12.3",
    "husky": "1.3.1",
    "lerna": "3.10.6",
    "lint-staged": "8.1.0",
    "prettier": "1.16.0",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  }
}
